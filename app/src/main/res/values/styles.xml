<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="theme_action_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="toolbar_textAppearance_white">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="Nav_Item_TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tab_textAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- 插画数量View style -->
    <style name="count_tag">
        <item name="android:padding">6dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableStart">@drawable/ic_thumbnail_multiple</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:background">#4D000000</item>
    </style>

    <!-- Illust标题文字样式 -->
    <style name="illust_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- 二级tab样式 -->
    <style name="tab_segment_sub">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/sub_tab_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <!--<item name="tl_textBold">SELECT</item>-->
        <!--<item name="tl_textSelectColor">@color/white</item>-->
        <!--<item name="tl_textUnselectColor">@color/tab_textColor_n</item>-->
        <!--<item name="tl_textsize">@dimen/sub_tab_textSize</item>-->
        <!--<item name="tl_iconVisible">false</item>-->
        <!--<item name="tl_indicator_style">BLOCK</item>-->
        <!--<item name="tl_indicator_color">@color/colorPrimary</item>-->
        <!--<item name="tl_indicator_corner_radius">30dp</item>-->
        <!--<item name="tl_indicator_anim_enable">false</item>-->
        <!--<item name="tl_tab_space_equal">false</item>-->
    </style>

    <style name="bottom_sheet_anim">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_exit</item>
    </style>
</resources>
