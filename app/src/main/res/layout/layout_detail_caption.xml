<?xml version="1.0" encoding="utf-8"?>
<!-- 点击显示详情dialog -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.lyj.fakepivix.app.data.model.response.Illust"/>
        <variable
            name="data"
            type="Illust"/>
        <variable
            name="showCaption"
            type="Boolean"
            />
    </data>
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_general_new"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:visible="@{showCaption}"
        >

        <ImageButton
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            android:src="@drawable/action_detail"
            />

        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_toEndOf="@id/show"
            >

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:url="@{data.user.profile_image_urls.medium}"
                app:placeHolder="@{@drawable/no_profile}"
                app:circle="@{true}"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingRight="72dp"
                    android:textColor="@color/renewal_font_black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@{data.title}"
                    />

                <TextView
                    android:id="@+id/nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/renewal_font_gray"
                    android:textSize="10sp"
                    android:text="@{data.user.name}"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
