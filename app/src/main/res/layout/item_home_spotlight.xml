<?xml version="1.0" encoding="utf-8"?>
<!-- 主页排行榜item -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.lyj.fakepivix.app.data.model.response.SpotlightArticle"/>
        <import type="com.lyj.fakepivix.app.utils.DateUtil"/>
        <variable
            name="data"
            type="SpotlightArticle"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="4dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <View
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorPrimary"
                />
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:scaleType="centerCrop"
                android:layout_below="@id/header"
                app:url="@{data.thumbnail}"
                app:fade="@{true}"
                app:placeHolder="@{@drawable/common_placeholder}"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/image"
                android:layout_alignBottom="@id/image"
                android:layout_alignStart="@id/image"
                android:layout_alignEnd="@id/image"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_alignParentBottom="true"
                    android:text="@{data.subcategory_label}"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"                     app:visible="@{DateUtil.isNew(data.publish_date)}"
                    >
                    <View
                        android:id="@+id/tag"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginEnd="-36dp"
                        android:layout_marginTop="-54dp"
                        android:background="@drawable/bg_new_tag"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="@string/tag_new"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textSize="12sp"
                android:minLines="2"
                android:maxLines="2"
                android:padding="8dp"
                android:textColor="#ff676767"
                android:textStyle="bold"
                android:layout_below="@id/image"
                android:text="@{data.title}"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>