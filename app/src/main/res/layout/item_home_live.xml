<?xml version="1.0" encoding="utf-8"?>
<!-- 主页排行榜item -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.lyj.fakepivix.app.data.model.response.Live"/>
        <variable
            name="data"
            type="Live"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="4dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="220dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:url="@{data.thumbnail_image_url}"
                app:fade="@{true}"
                app:placeHolder="@{@drawable/common_placeholder}"
                />
            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/image"
                android:layout_alignBottom="@id/image"
                android:layout_alignStart="@id/image"
                android:layout_alignEnd="@id/image"
                android:padding="10dp"
                android:background="@drawable/gradient_illust"
                >
                <LinearLayout
                    android:id="@+id/container_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="@dimen/small_avatar"
                        android:layout_height="@dimen/small_avatar"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        app:url="@{data.owner.user.profile_image_urls.medium}"
                        app:circle="@{true}"
                        app:placeHolder="@{@drawable/no_profile}"
                        />
                    <TextView
                        android:id="@+id/members"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableStart="@drawable/ic_live_member_count"
                        android:drawablePadding="3dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:shadowColor="@color/black"
                        android:shadowRadius="6"
                        android:layout_marginStart="5dp"
                        android:text="@{String.valueOf(data.member_count)}"
                        />
                    <TextView
                        android:id="@+id/views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableStart="@drawable/ic_live_audience_count"
                        android:drawablePadding="3dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:shadowColor="@color/black"
                        android:shadowRadius="6"
                        android:layout_marginStart="5dp"
                        android:text="@{String.valueOf(data.total_audience_count)}"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_live_play"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/play"
                    app:layout_constraintStart_toStartOf="@id/play"
                    app:layout_constraintEnd_toEndOf="@id/play"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/live_tag_bg"
                    android:gravity="center"
                    android:text="@string/tag_live"
                    android:textColor="#ffff0000"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/container_user"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/play"
                    android:paddingEnd="10dp"
                    android:layout_marginBottom="8dp"
                    style="@style/Illust_Title"
                    android:maxLines="2"
                    android:text="@{data.name}"
                    />

            </android.support.constraint.ConstraintLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>