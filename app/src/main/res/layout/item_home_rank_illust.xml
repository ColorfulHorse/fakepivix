<?xml version="1.0" encoding="utf-8"?>
<!-- 主页排行榜item -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.lyj.fakepivix.app.data.model.response.Illust"/>
        <variable
            name="data"
            type="Illust"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:url="@{data.image_urls.square_medium}"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/gradient_illust"
            >
            <LinearLayout
                android:id="@+id/container_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                >
                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="centerCrop"
                    app:url="@{data.user.profile_image_urls.medium}"
                    app:circle="@{true}"
                    app:placeHolder="@{@drawable/no_profile}"
                    />
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="5dp"
                    android:text="@{data.user.name}"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_above="@+id/container_user"
                android:layout_marginBottom="8dp"
                android:text="@{data.title}"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4D000000"
            android:padding="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_thumbnail_multiple"
            android:drawablePadding="2dp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:text="@{String.valueOf(data.page_count)}"
            android:visibility="@{data.page_count>1}"
            />
        <ImageView
            android:id="@+id/like"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end|bottom"
            android:scaleType="centerInside"
            android:src="@{data._bookmarked?@drawable/ic_button_liked:@drawable/ic_button_like}"
            />
    </android.support.v7.widget.CardView>
</layout>