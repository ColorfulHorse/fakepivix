<?xml version="1.0" encoding="utf-8"?>
<!-- 详情页作者 -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.lyj.fakepivix.app.data.model.response.User"/>
        <variable
            name="data"
            type="User"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/detail_padding_h"
        android:paddingEnd="@dimen/detail_padding_h"
        android:paddingTop="24dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:url="@{data.profile_image_urls.px_170x170}"
                app:placeHolder="@{@drawable/ic_profile_premium}"
                app:circle="@{true}"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:textColor="@color/renewal_font_black"
                android:layout_toEndOf="@+id/avatar"
                android:layout_toStartOf="@+id/follow"
                android:text="@{data.name}"
                />
            <Button
                android:id="@+id/follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textColor="@{data._followed?@color/white:@color/colorPrimary}"
                android:textSize="12sp"
                android:padding="5dp"
                android:text="@{data._followed?@string/followed:@string/follow}"
                android:background="@{data._followed?@drawable/shape_btn_primary:@drawable/shape_btn_stroke_primary}"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/userPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/preview_user"
            android:layout_marginTop="20dp"
            android:textColor="@color/more_button_text"
            android:drawableEnd="@drawable/icon_next"
            android:drawablePadding="10dp"
            android:layout_gravity="center_horizontal"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="24dp"
            android:background="@color/md_divider_black"
            />
    </LinearLayout>
</layout>